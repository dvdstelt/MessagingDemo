@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>Messaging Demo</h1>
	<p class="lead">An application to show messaging via NServiceBus to the rebel alliance.</p>
	<p>May the force be with you!</p>
	@*<p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>*@
</div>

<div class="row">
	<div class="col-md-6">
		<h2>Put items in your shopping cart</h2>
		<p>
			Select a product
		</p>
		@using (Html.BeginForm("AddToShoppingCart", "ShoppingCart", FormMethod.Post))
		{
			<p>
				@{ Html.RenderAction("ProductSelector", "Products"); }
				<br />
				<input type="submit" value="Add Item" />
			</p>
		}
	</div>
	<div class="col-md-6">
		<h2>Shopping cart</h2>
		<p>
			@{ Html.RenderAction("Items", "ShoppingCart"); }
		</p>
	</div>
</div>